# Generate a random secret: `openssl rand -base64 32`
AUTH_SECRET=your_random_secret_here

# Ollama Configuration (Local AI)
OLLAMA_BASE_URL=http://localhost:11434/api
OLLAMA_CHAT_MODEL=mistral:7b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Local PostgreSQL Database
# Start with: docker run -d --name dear-diary-postgres -p 5433:5432 -e POSTGRES_DB=dear_diary -e POSTGRES_USER=postgres -e POSTGRES_PASSWORD=password postgres:15
POSTGRES_URL=postgresql://postgres:password@localhost:5433/dear_diary

# Optional: Redis for caching (local)
# Start with: docker run -d --name dear-diary-redis -p 6379:6379 redis:alpine
REDIS_URL=redis://localhost:6379

# Optional: File storage (can be disabled for local use)
BLOB_READ_WRITE_TOKEN=
